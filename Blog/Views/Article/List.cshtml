@model List<Blog.Models.Article>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @foreach (var article in Model)
            {
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@article.Title, "Details", "Article", new { @id = article.Id }, null)
                        </h2>
                    </header>
                    <p>
                        @article.Content
                    </p>
                    <footer class="pull-right">
                        <small class="author">
                            @article.Author.FullName
                        </small>
                    </footer>
                </article>
            }
        </div>
    </div>
</div>
<hr />
