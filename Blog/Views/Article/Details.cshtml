@model Blog.Models.ArticleDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <article>
        <header>
            <h2>
                @Model.Title
            </h2>
            <div class="badge pull-right">
                Contact me at:<br> <br>@Model.Author.Email
            </div>
        </header>
        <p>
            @Model.Content
        </p>
        <img src="@Model.ImagePath" class="img-responsive mt-40" />
        <br>

        <div class="badge">
            <small class="author">
                Article by: @Model.Author.FullName
            </small>
        </div>

        <footer class="pull-right mt-40">
            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || HttpContext.Current.User.Identity.Name.Equals(Model.Author.UserName)))
            {
                @Html.ActionLink("Edit", "Edit", "Article", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                @Html.ActionLink("Delete", "Delete", "Article", new { @id = Model.Id }, new { @class = "btn btn-danger btn-xs" })
            }
            @Html.ActionLink("Back", "List", "Article", null, new { @class = "btn btn-default btn-xs" })
        </footer>

        @*Writing a comment*@
        <div class="form-group mt-40">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-10" })
            <div class="col-sm-4">
                @Html.TextAreaFor(m => m.Name, new { @class = "form-control", @rows = "1" })
            </div>
        </div>

        <div class="form-group mt-20">
            @Html.LabelFor(m => m.Subject, new { @class = "control-label col-sm-10" })
            <div class="col-sm-4">
                @Html.TextAreaFor(m => m.Subject, new { @class = "form-control", @rows = "1" })
            </div>
        </div>

        <div class="form-group mt-20">
            @Html.LabelFor(m => m.Comment, new { @class = "control-label col-sm-10" })
            <div class="col-sm-4">
                @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @rows = "7" })
            </div>
        </div>
        <br>

        @*Showing the comments*@

        <div class="form-group mt-40">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-10" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group mt-40">
            @Html.LabelFor(m => m.Subject, new { @class = "control-label col-sm-10" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group mt-40">
            @Html.LabelFor(m => m.Comment, new { @class = "control-label col-sm-10" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Comment, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
    </article>
</div>
<hr />